@model IEnumerable<MyPostgresApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.id</td>
            <td>@product.name</td>
            <td>@product.price.ToString("C")</td>
            <td>@product.description</td>
            <td>@product.createdat.ToString("g")</td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Insert", "Products")" class="btn btn-primary">Insert New Product</a>
