{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "lib": ["dom", "es2019"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["vite/client"]
  },
  "include": ["src/ts/**/*", "tsconfig.context.json"],
  "exclude": ["node_modules"]
}
