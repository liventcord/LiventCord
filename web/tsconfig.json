{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "lib": ["dom", "es2022"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "cypress"]
  },
  "include": ["src/ts/**/*", "cypress/e2e/*.cy.ts"],
  "exclude": ["node_modules"]
}
