{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "lib": ["dom", "es2019"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "cypress"]
  },
  "include": [
    "src/ts/**/*",
    "test/cypress/e2e/*.cy.ts",
    "tsconfig.context.json"
  ],
  "exclude": ["node_modules"]
}
